
public class HourglassCode {

public static void main(String[] args) {
	printBase(); //Print the firstline
	topHalf(); //Print the top half



}

public static void topHalf(){
	for (int i=1; i <=4; i++){
		System.out.print(" ");
//print each line
//print spaces
		for (int j=1; j<=i; j++){
			System.out.print(" ");
			System.out.print("\\");
	for (int j1=4; j1>0; j1--) { 
System.out.print("::");
}
		}
	}
}

public static void printBase(){
System.out.print("|");
	for (int i = 1; i<=10;i++){
System.out.print("\"");
}
System.out.println("|");
}
}